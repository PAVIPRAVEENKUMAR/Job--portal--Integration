
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OAuthToken {
  id                    String   @id @default(uuid())
  provider              String
  accessToken           String
  refreshToken          String?
  refreshTokenExpiresAt DateTime?  
  expiresAt             DateTime? 
  userId                String?   
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@unique([userId, provider])
}

model JobSyncOperationLog {
  id             String     @id @default(uuid())
  jobId          String
  operationType  OperationType
  payload        Json
  provider       String
  status         SyncStatus @default(PENDING)
  response       Json?
  error          String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

enum OperationType {
  CREATE
  UPDATE
  CLOSE
  DELETE
}

enum SyncStatus {
  PENDING
  SUCCESS
  FAILED
}